pipeline {

    agent {
        docker {
            image 'node:8.16.0-alpine'
            args '-v $HOME/.m2:/root/.m2'
        }
    }

    stages {
        stage('build') {
            when {
                changeset '**/result/**'
            }
            steps {
                echo 'Compiling result webapp'
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage('test') {
            when {
                changeset '**/result/**'
            }
            steps {
                echo 'Running unit tests on result webapp'
                dir('result') {
                    sh 'npm install && npm test'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline for result is completed..'
        }
    }
}
